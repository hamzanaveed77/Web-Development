<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<!-- Include Font Awesome CSS for icons -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  </head>
  <body>

    <div class="container">
      <div class="py-4">
        <h1>Home Pages</h1>
        <table class="table boarder shadow">
          <thead >
            <tr >
              <th scope="col">Roll Number</th>
              <th scope="col">Name</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          
              <% for( let index = 0; index < students.length; index++ ) { %>
                <tr>
                  <td><%= students[index].rollnumber %></td>
                    <td><%= students[index].name %></td>
                    <td><%= students[index].phone %></td>
                    <td><%= students[index].email %></td>
                
                    <td>
                      <div >
                        <a href="/views:<%=students[index]._id%>" class="btn btn-primary col-4"><i class="fas fa-eye"></i> View</a>
                        <a href="/edit:<%=students[index]._id%>"  class="btn btn-secondary col-3"><i class="fas fa-edit"></i> Edit</a>
                        <a href="/delete:<%=students[index]._id%>" class="btn btn-danger col-4"><i class="fas fa-trash"></i> Delete</a>
                      </div>
                  </td>
                </tr>
            <% } %>
                <!-- <th scope='row'>1</th>
                <td>Muneeb</td>
                <td>Rasheed</td>
                <td>rasheedmuneeb754@gmail.com</td> -->
                
        
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
